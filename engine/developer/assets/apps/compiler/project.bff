        ]

        .VariantDef_Linux = [
            .VariantSelector = { 'Linux' }
            .VariantLinks = {
                'pthread'
            }
        ]

        .ProjectVariants = {
            .VariantDef_Windows
            .VariantDef_Linux
        }
    ]
    ^Global_ProjectList + .ProjectDefinition
}
