        .ProjectType = 'Module'
        .ProjectComponent = 'Engine'

        .ProjectDefines = {
            'module_base_EXPORTS=1'
        }

        .ProjectIncludes = {
            'sdks/fmt/include'
            'sdks/lz4/include'
            'sdks/mbedtls/include'
        }

        .ProjectImports = {
            'SdkFmt'
            'SdkLz4'
        }

        // Platform specific configurations
        .VariantDef_UWP = [
            .VariantSelector = { 'UWP' }
            .VariantLinks = {
                'ntdll.lib'
                'comctl32.lib'
                'dbghelp.lib'
                'iphlpapi.lib'
                'ws2_32.lib'
                'dwmapi.lib'
                'xinput.lib'
                'xaudio2.lib'
                'advapi32.lib'
                'gdi32.lib'
